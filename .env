# Application
APP_NAME=HR SAAS
VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgrespw@localhost:55000/postgres
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=hr-saas-files
MINIO_SECURE=false

# JWT
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=720


# Jaeger
JAEGER_HOST=localhost
JAEGER_PORT=6831
JAEGER_ENABLED=false

# Logging
LOG_LEVEL=INFO
LOG_RENDERER=console

# RPA
RPA_HEADLESS=true
RPA_RATE_LIMIT=100

# Multi-language
SUPPORTED_LANGUAGES=en,zh,id
DEFAULT_LANGUAGE=en
